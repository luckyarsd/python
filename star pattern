#This code will print daimond star pattern according to given number
x = int(input("Enter a number: "))
for i in range(0,x):
    for j in range(0,x-i):
        print(end=" ")
    for j in range (0,i+1):
        print("*" , end=" ")
    print()
for i in range(0,x):
    for j in range(0,i+1):
        print(end=" ")
    for j in range (0,x-i):
        print("*" , end=" ")
    print()
